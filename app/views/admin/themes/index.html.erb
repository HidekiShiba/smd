<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h5 class="mt-3 mb-4 fas fa-pencil-alt"> テーマ一覧・追加</h5>
      <%= form_with model: @new_theme, url: admin_themes_path, local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <table class="table-sm">
          <tr>
            <td><h6>テーマ名</h6></td>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit '新規登録', class:"btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
      <table class="table table-striped table-bordered mt-3">
        <thead class="thead-light">
          <tr>
            <td class="text-center">テーマ名</td>
            <td></td>
          </tr>
        </thead>
        <% @themes.each do |theme| %>
          <tr>
            <td class="text-center">
              <%= theme.name %>
            </td>
            <td class="text-center">
              <%= link_to "編集する", edit_admin_theme_path(theme), class: "btn btn-success" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

