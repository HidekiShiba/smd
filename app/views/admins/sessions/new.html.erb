<div class="container mt-5">
  <div class="row">
    <div class="col-8 offset-2">
      <h5 class="ml-5 mt-5 mb-3 fas fa-lock-open"> 管理者ログイン</h5><br />
      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <table class="table-sm ml-5">
          <tbody class="mt-3">
            <tr>
              <td>メールアドレス</td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email", size: "40x1" %></td>
            </tr>
            <tr>
              <td>パスワード</td>
              <td><%= f.password_field :password, autocomplete: "current-password", size: "40x1" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "ログイン", class: "btn btn-primary mt-3" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
