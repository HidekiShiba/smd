<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h5 class="mt-4 fas fa-lock"> 新規会員登録</h5>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <table class="table-sm">
        <tr>
          <td class="badge badge-danger">全項目入力必須</td>
          <td></td>
        </tr>
        <tr>
          <td>名前　　　　　　　　(姓)　</td>
          <td><%= f.text_field :last_name, autofocus: true %></td>
          <td>(名)　　<%= f.text_field :first_name, autofocus: true %></td>
        </tr>
        <tr>
          <td>フリガナ　　　　　　(セイ)　</td>
          <td><%= f.text_field :last_name_kana, autofocus: true %></td>
          <td>(メイ)　<%= f.text_field :first_name_kana, autofocus: true %></td>
        </tr>
        <tr>
          <td>生年月日</td>
          <td><%= f.date_select :birth_date, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1990, 1, 1) %></td>
        </tr>
        <tr>
          <td>性別</td>
          <td>
            <%= f.radio_button :sex, :男性 %>
            <%= f.label :男性 %>
            <%= f.radio_button :sex, :女性 %>
            <%= f.label :女性 %>
          </td>
        </tr>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code, id: "postal_code" %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_area :address, id: "address" %></td>
        </tr>
        <tr>
          <td>電話番号(ハイフンなし)</td>
          <td><%= f.text_field :tel, autofocus: true %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td>パスワード(6文字以内)</td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td>パスワード(確認用)</td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "新規登録", class:"btn btn-outline-success btn-block" %></td><br />
        </tr>
      </table>
      <% end %>
      <h5 class="mt-3">既に登録済みの方</h5>
        <div><%= link_to ' こちら', new_patient_session_path, class: "fas fa-lock-open" %>　からログインしてください。</div>
    </div>
  </div>
</div>

